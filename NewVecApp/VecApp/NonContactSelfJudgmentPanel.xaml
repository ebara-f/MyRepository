<local:PanelBase
             x:Class="VecApp.NonContactSelfJudgmentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VecApp"
             xmlns:res="clr-namespace:VecApp.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="#2C3E50" CornerRadius="10" Padding="20">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <TextBlock Text="{x:Static res:Resources.String196}"
                       FontSize="12"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"/>

                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="10" Height="396">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Row="0" Grid.Column="0"
                           Source="{Binding ImageSource}"
                           Stretch="Uniform"
                           Height="268" Margin="5,-10,245,10"
                           Visibility="{Binding ImageVisibility}" Grid.ColumnSpan="2"/>

                        <Grid Grid.Row="0" Grid.Column="0" Margin="5,-10,245,10"
                           Visibility="{Binding GridVisibility}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0" Text="" IsReadOnly="True" Margin="0,10,0,0" Background="Gray"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{x:Static res:Resources.String78}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>
                            <TextBox Grid.Row="0" Grid.Column="2" Text="2σ" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>

                            <TextBox Grid.Row="1" Grid.Column="0" Text="X" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding XMaxMinValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding XTwoSigmaValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>

                            <TextBox Grid.Row="2" Grid.Column="0" Text="Y" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding YMaxMinValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding YTwoSigmaValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>

                            <TextBox Grid.Row="3" Grid.Column="0" Text="Z" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ZMaxMinValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                            <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding ZTwoSigmaValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>

                            <TextBox Grid.Row="4" Grid.Column="0" Text="{x:Static res:Resources.String79}" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="" IsReadOnly="True"/>
                            <TextBox Grid.Row="4" Grid.Column="2" Text="{Binding DistanceTwoSigmaValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>

                            <TextBox Grid.Row="5" Grid.Column="0" Text="{x:Static res:Resources.String80}" IsReadOnly="True" Margin="0,15,127,5" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15" Grid.ColumnSpan="2"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{x:Static res:Resources.String81}" IsReadOnly="True" Margin="0,15,0,5" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>
                            <TextBox Grid.Row="5" Grid.Column="2" Text="{Binding ResultText, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,15,0,0" Grid.RowSpan="2" VerticalAlignment="Center" Height="50" FontSize="35" TextAlignment="Center"/>

                            <TextBox Grid.Row="5" Grid.Column="0" Text="{Binding FaceDistanceValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Grid.ColumnSpan="2" Margin="0,39,127,0" Grid.RowSpan="2"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding MeasurementErrorValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,39,0,0" Grid.RowSpan="2"/>

                            <TextBox Grid.Row="7" Grid.Column="0" Text="{Binding ThresholdText, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,5,0,-58" Grid.ColumnSpan="2"/>

                        </Grid>


                        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Top">
                            <!--Button修正(2025.12.14)-->
                            <Button Content="{x:Static res:Resources.String121}" Margin="0,0,0,10" Click="Click_SensitivityBtn" Style="{StaticResource PanelButton2Style}" Height="40"/>
                            <Button Content="{x:Static res:Resources.String198}" Margin="0,0,0,10" Click="Click_SensorBtn" Style="{StaticResource PanelButton2Style}" Height="40"/>
                            <Button Content="{x:Static res:Resources.String199}" Margin="0,0,0,10" Click="Click_LatchBtn" Style="{StaticResource PanelButton2Style}" Height="40"/>
                            <Button Content="{x:Static res:Resources.String200}" Margin="0,0,0,10" Click="Click_PointerBtn" Style="{StaticResource PanelButton2Style}" Height="40"/>
                            <Button Content="{x:Static res:Resources.String201}" Margin="0,0,0,10" Click="Click_MotorBtn" Style="{StaticResource PanelButton2Style}" Height="40"/>
                            <Button Content="{x:Static res:Resources.String202}" Margin="0,0,0,10" Click="Click_LEDBtn" Style="{StaticResource PanelButton2Style}" Height="40"/>

                            <Button Content="{x:Static res:Resources.String195}" Click="Click_CloseBtn" Width="60" Height="40" Margin="0,30,0,0" Style="{StaticResource PanelButton2Style}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0" VerticalAlignment="Top">
                            <TextBox Width="573"
                                     Height="50"
                                     FontSize="16"
                                     Margin="20,0,0,0"
                                     VerticalContentAlignment="Center"
                                     Background="#2A2A2A"
                                     Foreground="White"
                                     Text="{Binding SubtitleText, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                            <!--Button修正(2025.12.14yori)-->
                            <Button Content="{x:Static res:Resources.String87}"
                                    Click="Click_HistoryBtn"
                                    Width="100" Height="40"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PanelButton2Style}"/>
                            <Button Content="{x:Static res:Resources.String204}"
                                    Click="Click_AllLightsOnBtn"
                                    Width="100" Height="40"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PanelButton2Style}"/>
                            <Button Content="{x:Static res:Resources.String205}"
                                    Click="Click_AllLightsOffBtn"
                                    Width="100" Height="40"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PanelButton2Style}"/>
                            <Button Content="{x:Static res:Resources.String206}"
                                    Click="Click_StopBtn"
                                    Width="100" Height="40"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PanelButton2Style}"/>
                            <Button Content="{x:Static res:Resources.String207}"
                                    Click="Click_SaveBtn"
                                    Width="100" Height="40"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PanelButton2Style}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</local:PanelBase>
