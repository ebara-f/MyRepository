<!--Title変更(2025.12.16yori)-->
<!--FontSize="20"変更に伴い、各サイズ(2025.12.17yori)-->
<Window x:Class="VecApp.DlgPrgBar3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:VecApp.Properties"
        mc:Ignorable="d"
        Closing="Terminate"
        Loaded="Window_Loaded"
        BorderThickness="1" BorderBrush="LightGray"
        Title="{x:Static res:Resources.String192}" Height="200" Width="400"
        ResizeMode="NoResize">

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1.5*" />
        </Grid.RowDefinitions>

        <!--TextBlockのText変更(2025.12.16yori)-->
        <!--ButtonのContent変更(2025.12.17yori)-->
        <TextBlock   Grid.Row="0" Margin="10,4" VerticalAlignment="Center" Text="{x:Static res:Resources.String197}" FontSize="20" />
        <ProgressBar Grid.Row="1" Margin="10,4" Height="25" IsIndeterminate="true" Background="White" Foreground="Orange" x:Name="Prg"/>
        <Button      Grid.Row="2" Width="120" Height="35" Content="{x:Static res:Resources.String56}" Click="Button_Click_Btn01" Background="DarkGray" Foreground="Black" FontSize="20"/>
    </Grid>
</Window>
