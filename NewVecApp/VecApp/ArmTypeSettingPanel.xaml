<local:PanelBase
             x:Class="VecApp.ArmTypeSettingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VecApp"
             xmlns:res="clr-namespace:VecApp.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="#2C3E50" CornerRadius="10" Padding="20">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <TextBlock Text="{x:Static res:Resources.String106}"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="White"
                    Margin="0,0,0,10"/>

                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="10" Margin="0,0,0,0">
                    <StackPanel>
                        <TextBlock Text="{x:Static res:Resources.String107}" Foreground="White" FontSize="18" Margin="0,0,0,10" Background="Gray"/>
                        <StackPanel Orientation="Horizontal" Margin="15,0,0,20">
                            <!-- SelectedItem="{Binding ArmTypeItem}"追加(2025.9.1yori) -->
                            <ComboBox ItemsSource="{Binding ArmTypeItems}" SelectedIndex="{Binding ArmTypeIndex}" SelectedItem="{Binding ArmTypeItem}"  Width="700" FontSize="16" Margin="10,0,0,0" SelectionChanged="ComboBox_SelectionChanged"/>
                        </StackPanel>

                        <Border Background="#DDD" Margin="0,0,0,0" CornerRadius="6" Grid.ColumnSpan="2">
                            <Image Source="{Binding ArmTypeImage}"
                                   Stretch="Uniform"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" Height="200"/>
                        </Border>

                        <!-- OK/キャンセルボタン -->
                        <StackPanel Orientation="Horizontal" Margin="200,10,0,0">
                            <Button Content="{x:Static res:Resources.String57}"
                                Click="Click_DoneBtn" Width="124" Height="46"
                                Margin="0,0,0,0" Style="{StaticResource PanelDoneButtonStyle}" />
                            <Button Content="{x:Static res:Resources.String56}"
                                Click="Click_CancelBtn" Width="124" Height="46"
                                Margin="100,0,0,0" Style="{StaticResource PanelCancelButtonStyle}" />
                        </StackPanel>

                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</local:PanelBase>
