<Window x:Class="VecApp.DlgBarLen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VecApp"
        xmlns:res="clr-namespace:VecApp.Properties"
        mc:Ignorable="d"
        Closing="Terminate"
        Loaded="Window_Loaded"
        BorderThickness="1" BorderBrush="LightGray"
        Title="{x:Static res:Resources.String261}" Height="200" Width="300"
        ResizeMode="NoResize">

    <Grid Background="Black">
        <TextBlock Grid.Column="0" Margin="20,20,60,0" Text="{x:Static res:Resources.String262}" VerticalAlignment="Top" Foreground="White" FontSize="12"/>
        <TextBox Text="{Binding Length}" VerticalAlignment="Top" Background="LightGray"  Foreground="Black" Margin="44,60,100,0" Height="20"/>
        <TextBlock Grid.Column="0" Margin="210,65,50,0" Text="mm" VerticalAlignment="Top" Foreground="White" FontSize="12"/>
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="46,6,0,-24"/>
        <Button Width="100" Height="30" Margin="20,90,130,15" Content="{x:Static res:Resources.String57}"         Style="{StaticResource PanelDoneButtonStyle}" FontSize="12" Click="Button_Click_OK"/>
        <Button Width="100" Height="30" Margin="130,90,20,15" Content="{x:Static res:Resources.String263}" Style="{StaticResource PanelCancelButtonStyle}" FontSize="12" Click="Button_Click_Cancel"/>
    </Grid>

</Window>
