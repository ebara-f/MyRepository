<!-- FontSize="20"へ変更(2025.12.7yori) -->
<local:PanelBase
             x:Class="VecApp.ScannerAlignmentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VecApp"
             xmlns:res="clr-namespace:VecApp.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="690" d:DesignWidth="800">
    <!-- d:DesignHeight="450"→Height=690"へ変更(2025.12.7yori) -->
    <Grid>
        <Border Background="#2C3E50" CornerRadius="10" Padding="20">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <!-- 用語をアライメントからキャリブレーションへ変更(2025.12.18yori) -->
                <TextBlock Text="{x:Static res:Resources.String30}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"/>

                <!-- Height="396"→Height="615"(2025.12.7yori) -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="10" Height="615">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="1.6*" />
                        </Grid.ColumnDefinitions>

                        <!-- Height="268"→Height="470"(2025.12.7yori) -->
                        <Image Grid.Row="0" Grid.Column="0"
                           Source="{Binding ImageSource}"
                           Stretch="Uniform"
                           Height="470" Margin="5,-10,150,10"
                           Visibility="{Binding ImageVisibility}" Grid.ColumnSpan="2"/>

                        <!-- キャリブOK/NG表示(2025.12.10yori) -->
                        <Grid Grid.Row="0" Grid.Column="0" Margin="5,-10,0,10"
                           Visibility="{Binding GridVisibility2}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding ResultText2, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,15,0,0" Height="470" FontSize="150" TextAlignment="Center" Background="{Binding ResultBackground2}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                        </Grid>

                        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Top">
                            <!-- ユーザーキャリ開始ボタン、未作成のため無効化(2025.12.16yori) -->
                            <Button Content="{x:Static res:Resources.String188}" Click="Click_UserCalStartBtn" Margin="0,0,0,5" Style="{StaticResource PanelStartButton2Style}" FontSize="20" IsEnabled="False" Opacity="0.25"/>
                            <!-- フルキャリ開始ボタン(2025.12.16yori) -->
                            <Button Content="{x:Static res:Resources.String273}" Margin="0,0,0,5" Click="Click_FullCalStartBtn" IsEnabled="{Binding IsFullCalStartBtnEnabled}" Style="{StaticResource PanelStartButton2Style}" FontSize="20" Opacity="{Binding FullCalStartButtonOpacity}"/>
                            <!-- 戻るボタン -->
                            <Button Content="{x:Static res:Resources.String83}" Margin="0,0,0,5" Click="Click_BackBtn" IsEnabled="{Binding IsBackBtnEnabled}" Style="{StaticResource PanelBackButtonStyle}" FontSize="20" Opacity="{Binding BackButtonOpacity}"/>
                            <!-- 中止ボタン(2025.12.16yori) -->
                            <Button Content="{x:Static res:Resources.String263}" Click="Click_StopBtn" IsEnabled="{Binding IsStopBtnEnabled}" Style="{StaticResource PanelButton2Style}" Height="40" FontSize="20" Opacity="{Binding StopButtonOpacity}"/>
                            <!-- 閉じる(2025.12.5yori) -->
                            <Button Content="{x:Static res:Resources.String64}" Click="Click_CloseBtn" Width="80" Height="40" Margin="0,20,0,0" Style="{StaticResource PanelButton2Style}" FontSize="20"/>
                        </StackPanel>

                        <!-- Margin変更(2025.12.16yori) -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0" VerticalAlignment="Top">
                            <!-- FontSize="16"→"20"へ変更(2025.12.5yori) -->
                            <TextBox Width="573"
                                     Height="50"
                                     FontSize="20"
                                     Margin="0,0,0,0"
                                     VerticalContentAlignment="Center"
                                     Background="#2A2A2A"
                                     Foreground="White"
                                     Text="{Binding SubtitleText, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                            <Button Content="{x:Static res:Resources.String87}"
                                    Click="Click_HistoryBtn"
                                    Width="100" Height="40"
                                    Style="{StaticResource PanelButton2Style}" FontSize="20"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="500,20,30,0" VerticalAlignment="Top"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</local:PanelBase>
