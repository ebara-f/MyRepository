<!-- UserControl→PanelBaseへ変更(2025.7.28yori) -->
<local:PanelBase
        x:Class="VecApp._0AxisInitializePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VecApp"
             xmlns:res="clr-namespace:VecApp.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="#2C3E50" CornerRadius="10" Padding="20">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <TextBlock Text="{x:Static res:Resources.String1}"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="White"
                    Margin="0,0,0,10"/>
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="10" Height="396">
                    <StackPanel>
                        <!-- 仮の画像スペース -->
                        <Border Background="#DDD" Margin="0,0,0,0" CornerRadius="6" Grid.ColumnSpan="2" Height="300">
                            <Image Source="Image/init_No0.PNG"
                               Stretch="Uniform"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                        </Border>
                        <!-- キャンセルボタン追加(2025.7.25yori) -->
                        <Button Content="{x:Static res:Resources.String56}" Margin="600,20,0,0" Width="124" Height="46"
                              Click="Click_CancelBtn" Style="{StaticResource PanelCancelButtonStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</local:PanelBase>
