<local:PanelBase
        x:Class="VecApp.GaugeSettingPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VecApp"
        xmlns:res="clr-namespace:VecApp.Properties"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="#2C3E50" CornerRadius="10" Padding="10">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <TextBlock Text="{x:Static res:Resources.String36}"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="White"
                    Margin="0,0,0,5"/>
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="5">
                    <StackPanel>
                        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="5" Margin="0,0,0,0">
                            <StackPanel>
                                <Border Background="Gray" Padding="2" CornerRadius="4" Margin="0,0,0,5">
                                    <TextBlock Text="{x:Static res:Resources.String37}" Foreground="White" FontSize="10"/>
                                </Border>

                                <!-- SelectedIndex変更(2025.8.9yori) -->
                                <StackPanel Orientation="Horizontal" Margin="15,0,0,5">
                                    <ComboBox Width="120" FontSize="12" Margin="10,0,0,0" SelectedIndex="{Binding GaugeIndex}" SelectionChanged="ComboBox_SelectionChanged" VerticalAlignment="Top">
                                        <!-- VAC26は使用していないため、非表示(2025.9.24yori) -->
                                        <ComboBoxItem Content="VAC26" Visibility="Collapsed"/>
                                        <ComboBoxItem Content="VAC39" />
                                        <ComboBoxItem Content="VAC46" />
                                    </ComboBox>

                                    <Image Width="80" Height="60" Margin="5,0,0,0"
                                           Source="{Binding ImageSource}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- TextBoxを有効無効に設定するコード追加(2025.8.7yori) -->
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="5" Margin="0,10,0,0">
                            <StackPanel>
                                <Border Background="Gray" Padding="2" CornerRadius="4" Margin="0,0,0,10">
                                    <TextBlock Text="{x:Static res:Resources.String38}" Foreground="White" FontSize="10"/>
                                </Border>

                                <Grid Margin="5,-5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="136"/>
                                        <ColumnDefinition Width="300"/>
                                        <ColumnDefinition Width="314"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <Border Background="Gray" Padding="2" CornerRadius="4" Margin="0,0,0,5">
                                            <TextBlock Text="{x:Static res:Resources.String39}" Foreground="White" FontSize="10"/>
                                        </Border>

                                        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                                            <TextBlock Text="X:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding CenterScopePntX, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="Y:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding CenterScopePntY, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="Z:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding CenterScopePntZ, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,55,0,0">
                                            <TextBlock Text="{x:Static res:Resources.String44}" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding CenterScopePntRad, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <Border Background="Gray" Padding="2" CornerRadius="4" Margin="0,0,0,5">
                                            <TextBlock Text="{x:Static res:Resources.String40}" Foreground="White" FontSize="10"/>
                                        </Border>

                                        <TextBlock Text="{x:Static res:Resources.String42}" Foreground="White" FontSize="12"/>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="X:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopePnt10, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="X:" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopePnt00, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="Y:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopePnt11, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="Y:" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopePnt01, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="Z:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopePnt12, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="Z:" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopePnt02, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="X:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopePnt30, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="X:" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopePnt20, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="Y:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopePnt31, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="Y:" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopePnt21, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="Z:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopePnt32, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="Z:" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopePnt22, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="{x:Static res:Resources.String43}" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneScopeRad, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                        <Border Background="Gray" Padding="2" CornerRadius="4" Margin="0,0,0,5">
                                            <TextBlock Text="{x:Static res:Resources.String41}" Foreground="White" FontSize="10"/>
                                        </Border>

                                        <TextBlock Text="{x:Static res:Resources.String42}" Foreground="White" FontSize="12"/>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="X:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopePnt10, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="X:" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopePnt00, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="Y:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopePnt11, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="Y:" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopePnt01, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="Z:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopePnt12, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="Z:" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopePnt02, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="X:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopePnt30, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="X:" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopePnt20, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="Y:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopePnt31, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="Y:" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopePnt21, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="{x:Static res:Resources.String43}" Foreground="White" FontSize="12" Margin="20,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopeRad, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="Z:" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopePnt32, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="Z:" Foreground="White" FontSize="12" Margin="10,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopePnt22, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                            <TextBlock Text="{x:Static res:Resources.String45}" Foreground="White" FontSize="12" Margin="20,0,0,0"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthScopeRadCnt, UpdateSourceTrigger=PropertyChanged}"
                                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="5" Margin="0,10,0,0">
                            <StackPanel>
                                <Border Background="Gray" Padding="2" CornerRadius="4" Margin="0,0,0,10">
                                    <TextBlock Text="{x:Static res:Resources.String46}" Foreground="White" FontSize="10"/>
                                </Border>

                                <Grid Margin="5,-5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="250"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <Border Background="Gray" Padding="2" CornerRadius="4" Margin="0,0,0,5">
                                            <!-- 許容量→許容値へ変更(2025.8.9yori) -->
                                            <TextBlock Text="{x:Static res:Resources.String47}" Foreground="White" FontSize="10"/>
                                        </Border>

                                        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                                            <TextBlock Text="{x:Static res:Resources.String50}" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding CenterLimit, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="{x:Static res:Resources.String51}" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneLimit, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="{x:Static res:Resources.String52}" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthLimit, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="{x:Static res:Resources.String53}" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding OnlyBallCenterLimit, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>

                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <Border Background="Gray" Padding="2" CornerRadius="4" Margin="0,0,0,5">
                                            <TextBlock Text="{x:Static res:Resources.String48}" Foreground="White" FontSize="10"/>
                                        </Border>

                                        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                                            <TextBlock Text="{x:Static res:Resources.String51}" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding PlaneMeasPntLimit, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="{x:Static res:Resources.String52}" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding LengthMeasPntLimit, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>

                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                        <Border Background="Gray" Padding="2" CornerRadius="4" Margin="0,0,0,5">
                                            <TextBlock Text="{x:Static res:Resources.String49}" Foreground="White" FontSize="10"/>
                                        </Border>

                                        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                                            <TextBlock Text="{x:Static res:Resources.String54}" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding KidoBase, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                            <TextBlock Text="{x:Static res:Resources.String55}" Foreground="White" FontSize="12"/>
                                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                                     Text="{Binding KidoLimit, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,5,0,0">
                            <Button Content="{x:Static res:Resources.String60}"
                                        Click="Click_InitialSettingBtn"
                                        Width="138" Height="40"
                                        Margin="0,0,10,0" Style="{StaticResource PanelInitialValueButtonStyle}"/>
                            <Button Content="{x:Static res:Resources.String57}"
                                        Click="Click_DoneBtn"
                                        Width="120" Height="40"
                                        Margin="340,0,10,0" Style="{StaticResource PanelDoneButtonStyle}" />
                            <Button Content="{x:Static res:Resources.String56}"
                                        Click="Click_CancelBtn"
                                        Width="120" Height="40"
                                        Margin="0,0,0,0" Style="{StaticResource PanelCancelButtonStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</local:PanelBase>
