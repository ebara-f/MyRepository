<!-- 全体のFontSize="20"へ変更(2025.10.5yori) -->
<local:PanelBase
             x:Class="VecApp.ContactSelfJudgmentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VecApp"
             xmlns:res="clr-namespace:VecApp.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Border Background="#2C3E50" CornerRadius="10" Padding="20">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <TextBlock Text="{x:Static res:Resources.String95}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"/>

                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="10" Height="396">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="1.6*" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Row="0" Grid.Column="0"
                           Source="{Binding ImageSource}"
                           Stretch="Uniform"
                           Height="268" Margin="5,-10,245,10"
                           Visibility="{Binding ImageVisibility}" Grid.ColumnSpan="2"/>

                        <!-- ボタン(2025.10.5yori) -->
                        <Grid Grid.Row="0" Grid.Column="0" Margin="5,-10,100,10"
                              Visibility="{Binding GridVisibility}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Row="0" Grid.Column="0" Text="" IsReadOnly="True" Margin="0,10,0,0" Background="Gray"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{x:Static res:Resources.String235}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="0" Grid.Column="2" Text="{x:Static res:Resources.String236}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>

                            <TextBox Grid.Row="1" Grid.Column="0" Text="{x:Static res:Resources.String237}" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding TriggerButtonStatus, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding TriggerButtonResult, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right" Background="{Binding BackgroundColor0}"/>

                            <TextBox Grid.Row="2" Grid.Column="0" Text="{x:Static res:Resources.String238}" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CancelButtonStatus, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding CancelButtonResult, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right" Background="{Binding BackgroundColor1}"/>

                            <TextBox Grid.Row="3" Grid.Column="0" Text="{x:Static res:Resources.String239}" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ExecButtonStatus, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding ExecButtonResult, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right" Background="{Binding BackgroundColor2}"/>

                            <TextBox Grid.Row="4" Grid.Column="0" Text="{x:Static res:Resources.String240}" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding LockButtonStatus, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="4" Grid.Column="2" Text="{Binding LockButtonResult, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right" Background="{Binding BackgroundColor3}"/>
                        </Grid>

                        <!-- ファームウェアVer.(2025.10.5yori) -->
                        <Grid Grid.Row="0" Grid.Column="0" Margin="5,-10,100,10"
                           Visibility="{Binding GridVisibility2}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Row="0" Grid.Column="0" Text="Ver." IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FirmVer, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,10,0,0" TextAlignment="Right" FontSize="20"/>
                        </Grid>

                        <!-- 通信チェック、カウンタVer.(2025.10.5yori) -->
                        <Grid Grid.Row="0" Grid.Column="0" Margin="5,-10,260,10"
                              Visibility="{Binding GridVisibility3}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0" Text="{x:Static res:Resources.String243}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CounterItem, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>

                            <TextBox Grid.Row="1" Grid.Column="0" Text="No.0" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CounterNo0Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor0}"/>

                            <TextBox Grid.Row="2" Grid.Column="0" Text="No.1" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CounterNo1Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor1}"/>

                            <TextBox Grid.Row="3" Grid.Column="0" Text="No.2" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CounterNo2Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor2}"/>

                            <TextBox Grid.Row="4" Grid.Column="0" Text="No.3" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding CounterNo3Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor3}"/>

                            <TextBox Grid.Row="5" Grid.Column="0" Text="No.4" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding CounterNo4Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor4}"/>

                            <TextBox Grid.Row="6" Grid.Column="0" Text="No.5" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CounterNo5Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor5}"/>

                            <TextBox Grid.Row="7" Grid.Column="0" Text="No.6" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding CounterNo6Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor6}"/>
                        </Grid>

                        <!-- カウントチェック1、2(2025.10.5yori) -->
                        <Grid Grid.Row="0" Grid.Column="0" Margin="5,-10,100,10"
                           Visibility="{Binding GridVisibility4}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0" Text="{x:Static res:Resources.String243}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{x:Static res:Resources.String249}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="0" Grid.Column="2" Text="{x:Static res:Resources.String236}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>

                            <TextBox Grid.Row="1" Grid.Column="0" Text="No.0" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CounterNo0Count, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding CounterNo0Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor0}"/>

                            <TextBox Grid.Row="2" Grid.Column="0" Text="No.1" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CounterNo1Count, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding CounterNo1Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor1}"/>

                            <TextBox Grid.Row="3" Grid.Column="0" Text="No.2" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CounterNo2Count, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding CounterNo2Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor2}"/>

                            <TextBox Grid.Row="4" Grid.Column="0" Text="No.3" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding CounterNo3Count, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="4" Grid.Column="2" Text="{Binding CounterNo3Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor3}"/>

                            <TextBox Grid.Row="5" Grid.Column="0" Text="No.4" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding CounterNo4Count, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="5" Grid.Column="2" Text="{Binding CounterNo4Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor4}"/>

                            <TextBox Grid.Row="6" Grid.Column="0" Text="No.5" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CounterNo5Count, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="6" Grid.Column="2" Text="{Binding CounterNo5Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor5}"/>

                            <TextBox Grid.Row="7" Grid.Column="0" Text="No.6" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding CounterNo6Count, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="7" Grid.Column="2" Text="{Binding CounterNo6Result, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor6}"/>
                        </Grid>

                        <!-- ZXスケール(2025.10.5yori) -->
                        <Grid Grid.Row="0" Grid.Column="0" Margin="5,-10,100,10"
                           Visibility="{Binding GridVisibility5}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0" Text="{x:Static res:Resources.String250}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{x:Static res:Resources.String249}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="0" Grid.Column="2" Text="{x:Static res:Resources.String236}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>

                            <TextBox Grid.Row="1" Grid.Column="0" Text="Z" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CounterNo8Count, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding CounterNo8Judge, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor0}"/>

                            <TextBox Grid.Row="2" Grid.Column="0" Text="X" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CounterNo9Count, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding CounterNo9Judge, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"  Background="{Binding BackgroundColor1}"/>

                            <TextBox Grid.Row="4" Grid.Column="0" Text="{x:Static res:Resources.String250}" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="Ver." IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>

                            <TextBox Grid.Row="5" Grid.Column="0" Text="Z" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding CounterNo8Ver, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>

                            <TextBox Grid.Row="6" Grid.Column="0" Text="X" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CounterNo9Ver, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                        </Grid>                        
                        
                        <!-- 温度センサ(2025.10.5yori) -->
                        <Grid Grid.Row="0" Grid.Column="0" Margin="5,-10,100,10"
                           Visibility="{Binding GridVisibility6}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0" Text="{x:Static res:Resources.String243}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{x:Static res:Resources.String251}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="0" Grid.Column="2" Text="{x:Static res:Resources.String252}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>

                            <TextBox Grid.Row="1" Grid.Column="0" Text="A" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ArmTempA, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding CalTempA, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>

                            <TextBox Grid.Row="2" Grid.Column="0" Text="B" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ArmTempB, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding CalTempB, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>

                            <TextBox Grid.Row="3" Grid.Column="0" Text="C" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ArmTempC, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                            <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding CalTempB, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" FontSize="20" TextAlignment="Right"/>
                        </Grid>

                        <!-- スイッチ→ボタンへ文字変更(2025.10.2yori) -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Orientation="Vertical" VerticalAlignment="Top">
                            <Button Content="{x:Static res:Resources.String234}" Margin="0,0,0,5" Click="Click_SwitchBtn" Style="{StaticResource PanelButton2Style}" Height="30" FontSize="20"/>
                            <Button Content="{x:Static res:Resources.String97}" Margin="0,0,0,5" Click="Click_FirmwareVerBtn" Style="{StaticResource PanelButton2Style}" Height="30" FontSize="20"/>
                            <Button Content="{x:Static res:Resources.String98}" Margin="0,0,0,5" Click="Click_CommunicationCheckBtn" Style="{StaticResource PanelButton2Style}" Height="30" FontSize="20"/>
                            <Button Content="{x:Static res:Resources.String99}" Margin="0,0,0,5" Click="Click_CounterVerBtn" Style="{StaticResource PanelButton2Style}" Height="30" FontSize="20"/>
                            <Button Content="{x:Static res:Resources.String100}" Margin="0,0,0,5" Click="Click_CountCheck1Btn" Style="{StaticResource PanelButton2Style}" Height="30" FontSize="20"/>
                            <Button Content="{x:Static res:Resources.String101}" Margin="0,0,0,5" Click="Click_CountCheck2Btn" Style="{StaticResource PanelButton2Style}" Height="30" FontSize="20"/>
                            <Button Content="{x:Static res:Resources.String102}" Margin="0,0,0,5" Click="Click_ZXScaleAxisBtn" Style="{StaticResource PanelButton2Style}" Height="30" FontSize="20"/>
                            <Button Content="{x:Static res:Resources.String103}" Margin="0,0,0,5" Click="Click_TemperatureSensorBtn" Style="{StaticResource PanelButton2Style}" Height="30" FontSize="20"/>

                            <Button Content="閉じる" Click="Click_CloseBtn" Width="80" Height="40" Margin="0,40,0,0" Style="{StaticResource PanelButton2Style}" FontSize="20"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0" VerticalAlignment="Top">
                            <TextBox Width="573"
                                     Height="60"
                                     FontSize="20"
                                     Margin="5,0,0,0"
                                     VerticalContentAlignment="Top"
                                     Background="#2A2A2A"
                                     Foreground="White"
                                     Text="{Binding SubtitleText, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                            <Button Content="{x:Static res:Resources.String104}"
                                    Click="Click_ParamSaveBtn"
                                    Width="140" Height="40"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PanelButton2Style}" FontSize="20"/>
                            <Button Content="{x:Static res:Resources.String105}"
                                    Click="Click_ParamRestoreBtn"
                                    Width="140" Height="40"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PanelButton2Style}" FontSize="20"/>
                            <Button Content="{x:Static res:Resources.String89}"
                                    Click="Click_SaveBtn"
                                    Width="100" Height="40"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PanelButton2Style}" FontSize="20"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</local:PanelBase>