<local:PanelBase
             x:Class="VecApp.ContactInspectionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VecApp"
             xmlns:res="clr-namespace:VecApp.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="#2C3E50" CornerRadius="10" Padding="20">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <TextBlock Text="{x:Static res:Resources.String77}"
                       FontSize="12"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"/>

                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="10" Height="396">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Row="0" Grid.Column="0"
                           Source="{Binding ImageSource}"
                           Stretch="Uniform"
                           Height="268" Margin="5,-10,245,10"
                           Visibility="{Binding ImageVisibility}" Grid.ColumnSpan="2"/>

                        <Grid Grid.Row="0" Grid.Column="0" Margin="5,-10,245,10"
                           Visibility="{Binding GridVisibility}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0" Text="" IsReadOnly="True" Margin="0,10,0,0" Background="Gray"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{x:Static res:Resources.String78}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>
                            <TextBox Grid.Row="0" Grid.Column="2" Text="2σ" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>

                            <TextBox Grid.Row="1" Grid.Column="0" Text="X" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding XMaxMinValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding XMaxMinBackground}" TextAlignment="Left" FontSize="15"/>
                            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding XTwoSigmaValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding XTwoSigmaBackground}" TextAlignment="Left" FontSize="15"/>

                            <TextBox Grid.Row="2" Grid.Column="0" Text="Y" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding YMaxMinValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding YMaxMinBackground}" TextAlignment="Left" FontSize="15"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding YTwoSigmaValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding YTwoSigmaBackground}" TextAlignment="Left" FontSize="15"/>

                            <TextBox Grid.Row="3" Grid.Column="0" Text="Z" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ZMaxMinValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding ZMaxMinBackground}" TextAlignment="Left" FontSize="15"/>
                            <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding ZTwoSigmaValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding ZTwoSigmaBackground}" TextAlignment="Left" FontSize="15"/>

                            <TextBox Grid.Row="4" Grid.Column="0" Text="{x:Static res:Resources.String79}" IsReadOnly="True" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="" IsReadOnly="True"/>
                            <TextBox Grid.Row="4" Grid.Column="2" Text="{Binding DistanceTwoSigmaValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding DistanceTwoSigmaBackground}" TextAlignment="Left" FontSize="15"/>

                            <TextBox Grid.Row="5" Grid.Column="0" Text="{x:Static res:Resources.String80}" IsReadOnly="True" Margin="0,15,127,5" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15" Grid.ColumnSpan="2"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{x:Static res:Resources.String81}" IsReadOnly="True" Margin="0,15,0,5" Background="Gray" Foreground="White" TextAlignment="Center" FontSize="15"/>
                            <TextBox Grid.Row="5" Grid.Column="2" Text="{Binding ResultText, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,15,0,0" Grid.RowSpan="2" VerticalAlignment="Center" Height="50" FontSize="35" TextAlignment="Center" Background="{Binding ResultBackground}"/>

                            <TextBox Grid.Row="5" Grid.Column="0" Text="{Binding FaceDistanceValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Grid.ColumnSpan="2" Margin="0,39,127,0" Grid.RowSpan="2"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding MeasurementErrorValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding MeasurementErrorBackground}" TextAlignment="Left" FontSize="15" Margin="0,39,0,0" Grid.RowSpan="2"/>

                            <TextBox Grid.Row="7" Grid.Column="0" Text="{Binding ThresholdText, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,5,0,-58" Grid.ColumnSpan="2"/>

                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="0" Margin="5,-10,245,10"
                           Visibility="{Binding GridVisibility2}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding ResultText2, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,15,0,0" VerticalAlignment="Center" Height="230" FontSize="65" TextAlignment="Center" Background="{Binding ResultBackground2}"/>

                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="0" Margin="5,-10,245,10"
                           Visibility="{Binding GridVisibility3}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0" Text="" IsReadOnly="True" Margin="0,10,0,0" Background="Gray"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{x:Static res:Resources.String254}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" VerticalContentAlignment="Center"  FontSize="25"/>
                            <TextBox Grid.Row="0" Grid.Column="2" Text="{x:Static res:Resources.String255}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" VerticalContentAlignment="Center"  FontSize="25"/>

                            <TextBox Grid.Row="1" Grid.Column="0" Text="{x:Static res:Resources.String256}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" VerticalContentAlignment="Center"  FontSize="25"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CenterBefValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding CenterBefBackground}" TextAlignment="Right" VerticalContentAlignment="Center" FontSize="25"/>
                            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding CenterAftValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding CenterAftBackground}" TextAlignment="Right" VerticalContentAlignment="Center" FontSize="25"/>

                            <TextBox Grid.Row="2" Grid.Column="0" Text="{x:Static res:Resources.String257}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" VerticalContentAlignment="Center"  FontSize="25"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding DiaBefValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding DiaBefBackground}" TextAlignment="Right" VerticalContentAlignment="Center" FontSize="25"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding DiaAftValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding DiaAftBackground}" TextAlignment="Right" VerticalContentAlignment="Center" FontSize="25"/>

                            <TextBox Grid.Row="3" Grid.Column="0" Text="{Binding ThresholdText3, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,10,0,0" Grid.ColumnSpan="2"  VerticalContentAlignment="Center" Background="#2A2A2A" Foreground="White"/>
                            <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding ResultText3, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,10,0,0" VerticalAlignment="Center" TextAlignment="Center" Background="{Binding ResultBackground3}" Height="65" FontSize="15"/> 

                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="0" Margin="5,-10,245,10"
                           Visibility="{Binding GridVisibility4}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0" Text="" IsReadOnly="True" Margin="0,10,0,0" Background="Gray"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{x:Static res:Resources.String78}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" VerticalContentAlignment="Center"  FontSize="20"/>

                            <TextBox Grid.Row="1" Grid.Column="0" Text="X" IsReadOnly="True" Margin="0,0,0,0" Background="Gray" Foreground="White" TextAlignment="Center" VerticalContentAlignment="Center"  FontSize="20"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding XMaxMixValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding XMaxMinground}" TextAlignment="Right" VerticalContentAlignment="Center" FontSize="20"/>

                            <TextBox Grid.Row="2" Grid.Column="0" Text="Y" IsReadOnly="True" Margin="0,0,0,0" Background="Gray" Foreground="White" TextAlignment="Center" VerticalContentAlignment="Center"  FontSize="20"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding YMaxMixValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding YMaxMinground}" TextAlignment="Right" VerticalContentAlignment="Center" FontSize="20"/>

                            <TextBox Grid.Row="3" Grid.Column="0" Text="Z" IsReadOnly="True" Margin="0,0,0,0" Background="Gray" Foreground="White" TextAlignment="Center" VerticalContentAlignment="Center"  FontSize="20"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ZMaxMixValue, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding ZMaxMinground}" TextAlignment="Right" VerticalContentAlignment="Center" FontSize="20"/>

                            <TextBox Grid.Row="4" Grid.Column="0" Text="{x:Static res:Resources.String41}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" VerticalContentAlignment="Center"  FontSize="20"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{x:Static res:Resources.String81}" IsReadOnly="True" Margin="0,10,0,0" Background="Gray" Foreground="White" TextAlignment="Center" VerticalContentAlignment="Center"  FontSize="20"/>

                            <TextBox Grid.Row="5" Grid.Column="0" Text="{Binding FaceDistanceValue4, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,0,0,0" TextAlignment="Right" VerticalContentAlignment="Center" FontSize="20"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding MeasurementErrorValue4, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="{Binding MeasurementError4Background}" TextAlignment="Right" VerticalContentAlignment="Center" FontSize="20"/>

                            <TextBox Grid.Row="6" Grid.Column="0" Text="{Binding ThresholdText4, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,0,0,0" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                            <TextBox Grid.Row="6" Grid.Column="2" Text="{Binding ResultText4, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0,0,0,0" Grid.RowSpan="2" VerticalAlignment="Center" TextAlignment="Center" Background="{Binding ResultBackground4}" FontSize="40"/>
                        </Grid>

                        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Top">
                            <Button Content="{x:Static res:Resources.String82}" Margin="0,0,0,5" Click="Click_StartBtn" IsEnabled="{Binding IsStartBtnEnabled}" Style="{StaticResource PanelStartButton2Style}"/>
                            <Button Content="{x:Static res:Resources.String83}" Margin="0,0,0,5" Click="Click_BackBtn" IsEnabled="{Binding IsBackBtnEnabled}" Style="{StaticResource PanelBackButtonStyle}"/>
                            <Button Content="{x:Static res:Resources.String84}" Click="Click_FirstBackBtn" IsEnabled="{Binding IsReStartBtnEnabled}" Style="{StaticResource PanelFirstBackButtonStyle}"/>
                            <Button Content="{x:Static res:Resources.String85}" Click="Click_ProbeBtn" Margin="0,20,0,0" Visibility="{Binding GridVisibility}" Style="{StaticResource PanelButton2Style}" Height="40"/>
                            <Button Content="{x:Static res:Resources.String86}" Click="Click_ContactBtn" Margin="0,20,0,0" Visibility="{Binding GridVisibility}" Style="{StaticResource PanelButton2Style}" Height="40"/>
                            <Button Content="{x:Static res:Resources.String64}" Click="Click_CloseBtn" Width="60" Height="40" Margin="0,20,0,0" Style="{StaticResource PanelButton2Style}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0" VerticalAlignment="Top">
                            <TextBox Width="573"
                                     Height="50"
                                     FontSize="16"
                                     Margin="20,0,0,0"
                                     VerticalContentAlignment="Center"
                                     Background="#2A2A2A"
                                     Foreground="White"
                                     Text="{Binding SubtitleText, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                            <Button Content="{x:Static res:Resources.String88}"
                                    Click="Click_SettingBtn" IsEnabled="{Binding IsSettingBtnEnabled}"
                                    Width="100" Height="40"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PanelButton2Style}"/>
                            <Button Content="{x:Static res:Resources.String89}"
                                    Click="Click_SaveBtn" IsEnabled="{Binding IsSaveBtnEnabled}"
                                    Width="100" Height="40"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PanelButton2Style}"/>
                            <Button Content="{x:Static res:Resources.String63}"
                                    Click="Click_HelpBtn"
                                    Width="100" Height="40"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PanelButton2Style}"/>
                            <Button Content="{x:Static res:Resources.String90}"
                                    Click="Click_SnapBtn" Visibility="{Binding SnapVisibility}"
                                    Width="100" Height="40"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PanelButton2Style}"/>
                            <Button Content="{x:Static res:Resources.String87}"
                                    Click="Click_HistoryBtn"
                                    Width="100" Height="40"
                                    Style="{StaticResource PanelButton2Style}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="500,20,30,0" VerticalAlignment="Top">
                            <TextBlock Text="{x:Static res:Resources.String218}" Foreground="White" FontSize="12"/>
                            <TextBox Width="50" Background="Black" Foreground="White" Margin="10,0,0,0" FontSize="12"
                                Text="{Binding GaugeLength, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding IsTextBoxEnabled}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</local:PanelBase>
