<!-- 全体のFontSize="20"へ変更(2025.9.28yori) -->
<local:PanelBase
        x:Class="VecApp.SensorConnectionPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VecApp"
        xmlns:res="clr-namespace:VecApp.Properties"
        mc:Ignorable="d"
        d:DesignHeight="480" d:DesignWidth="800">
    <Grid>
        <Border Background="#2C3E50" CornerRadius="10" Padding="20">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">

                <!-- 用語(センサー→スキャナ)変更(2025.7.28yori)-->
                <TextBlock Text="{x:Static res:Resources.String3}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>

                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="10">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="200" />
                            </Grid.ColumnDefinitions>

                            <!-- 用語(センサー→スキャナ)変更(2025.7.28yori)-->
                            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,0,150,0" Height="180">
                                <TextBlock Text="{x:Static res:Resources.String4}" Foreground="White" FontSize="26" Margin="0,0,0,10" Background="Gray"/>
                                <TextBlock Text="{x:Static res:Resources.String5}" Foreground="White" FontSize="20" Margin="15,0,0,20"/>
                                <TextBlock Text="{x:Static res:Resources.String6}" Foreground="White" FontSize="20" Margin="15,0,0,20"/>
                                <TextBlock Text="{x:Static res:Resources.String7}" Foreground="White" FontSize="20" Margin="15,0,0,20"/>
                            </StackPanel>

                            <!-- 仮の画像スペース -->
                            <Border Background="#DDD" Margin="415,0,0,0" CornerRadius="6" Grid.ColumnSpan="2">
                                <Image Source="Image/connectSensor_Api_V8.PNG"
                                       x:Name="PngImage"
                                       Stretch="Uniform"      
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Height="240" Margin="5,5,0,20"/>

                            </Border>
                        </Grid>

                        <!-- 注意事項説明文変更(2025.7.28yori) -->
                        <TextBlock Text="{x:Static res:Resources.String8}"
                               Foreground="White"
                               FontSize="20"
                               Margin="415,10,0,0"/>

                        <Button Content="{x:Static res:Resources.String58}"
                            HorizontalAlignment="Left"
                            Padding="16,8"
                            Margin="0,-160,0,0"
                            Click="Click_ConnectDoneBtn" Width="150" Style="{StaticResource PanelDoneButtonStyle}" Height="46" FontSize="20"/>

                        <!-- キャンセルボタン追加(2025.7.30yori) -->
                        <Button Content="{x:Static res:Resources.String56}"
                            HorizontalAlignment="Left"
                            Padding="16,8"
                            Margin="170,-160,0,0"
                            Click="Click_ConnectCancelBtn" Width="150" Style="{StaticResource PanelCancelButtonStyle}" Height="46" FontSize="20"/>

                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <TextBlock Text="{x:Static res:Resources.String2}" FontSize="20" Margin="480,20,10,0" Foreground="White"/>

                            <!-- スライドバー -->
                            <Slider x:Name="SlideSwitch"
                                Width="80"
                                Minimum="0" Maximum="1"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                ValueChanged="SlideSwitch_ValueChanged"
                                Margin="5,20,0,0"/>

                            <TextBlock x:Name="SlideStatusText"
                                   Text="オフ"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="5,20,0,0" FontSize="20"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</local:PanelBase>
