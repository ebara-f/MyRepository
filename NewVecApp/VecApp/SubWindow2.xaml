<!-- 全体のFontSize="20"へ変更(2025.9.28yori) -->
<!-- ウィンドウサイズ固定(2025.11.4yori) -->
<local:SubWindowBase
        x:Class="VecApp.SubWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VecApp"
        xmlns:res="clr-namespace:VecApp.Properties"
        mc:Ignorable="d"
        Title="BeakMater Plug-in SoftWare(beta)" Height="770" Width="1100" Closing="Terminate" ResizeMode="NoResize">
    <!-- Loaded="Window_Loaded"削除(2025.10.1yori) -->
    <!-- Height="550"→Height=770"へ変更(2025.9.27yori) -->
    <Grid Background="#2C3E50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 左側メニュー -->
        <StackPanel Background="#2C3E50" VerticalAlignment="Stretch">
            <!-- プローブ→プローブ設定へ変更、プローブ登録ボタン追加(2025.10.24yori) -->
            <!-- プローブ登録ボタン順番変更(2025.11.1yori) -->
            <TextBlock Text="{x:Static res:Resources.String224}" FontSize="20" FontWeight="Bold" Margin="20,20,0,10" Foreground="White" />
            <Button Style="{StaticResource MenuButtonStyle}" Content="{x:Static res:Resources.String9}" Click="Click_Btn01" FontSize="20"/>
            <Button Style="{StaticResource MenuButtonStyle}" Content="{x:Static res:Resources.String70}" Click="Click_Btn07" FontSize="20"/>
            <!-- 始業前点検作成中のため、無効(2025.12.2yori) -->
            <Button Style="{StaticResource MenuButtonStyle}" Content="{x:Static res:Resources.String16}" Click="Click_Btn02" FontSize="20" IsEnabled="False" Opacity="0.25"/>
            <!-- 用語をアライメントからキャリブレーションへ変更(2025.12.18yori) -->
            <Button Style="{StaticResource MenuButtonStyle}" Content="{x:Static res:Resources.String30}" Click="Click_Btn03" FontSize="20"/>
            <!-- 自己診断作成中のため、無効(2025.12.2yori) -->
            <Button Style="{StaticResource MenuButtonStyle}" Content="{x:Static res:Resources.String72}" Click="Click_Btn04" FontSize="20" IsEnabled="False" Opacity="0.25"/>
            <!-- アーム型式作成中のため、無効(2025.12.2yori) -->
            <Button Style="{StaticResource MenuButtonStyle}" Content="{x:Static res:Resources.String67}" Click="Click_Btn05" FontSize="20" IsEnabled="False" Opacity="0.25"/>
            <!-- ネットワーク作成中のため、無効(2025.10.31yori) -->
            <Button Style="{StaticResource MenuButtonStyle}" Content="{x:Static res:Resources.String65}" Click="Click_Btn06" FontSize="20" IsEnabled="False" Opacity="0.25"/>
        </StackPanel>

        <!-- 右側：メインパネル -->
        <Grid Grid.Column="1" Background="#2C3E50" Margin="20">
            <ContentControl x:Name="MainContent" Grid.Column="1"/>
        </Grid>
    </Grid>
</local:SubWindowBase>
