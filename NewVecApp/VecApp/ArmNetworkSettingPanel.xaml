<!-- 全体のFontSize="20"へ変更(2025.9.28yori) -->
<local:PanelBase
             x:Class="VecApp.ArmNetworkSettingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VecApp"
             xmlns:res="clr-namespace:VecApp.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="#2C3E50" CornerRadius="10" Padding="20">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <TextBlock Text="{x:Static res:Resources.String108}"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Margin="0,0,0,10"/>

                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="10" Margin="0,0,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="15,0,0,5">
                            <TextBlock Text="{x:Static res:Resources.String109}" Foreground="White" FontSize="20" VerticalAlignment="Center"/>
                            <TextBox Width="70"
                                     FontSize="20"
                                     Margin="100,0,0,0"
                                     VerticalContentAlignment="Center"
                                     Background="Black"
                                     Foreground="White"
                                     Text="{Binding IPAdress1, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="." Foreground="White" FontSize="20" Margin="10,0,0,0"/>
                            <TextBox Width="70"
                                    FontSize="20"
                                    Margin="10,0,0,0"
                                    VerticalContentAlignment="Center"
                                    Background="Black"
                                    Foreground="White"
                                    Text="{Binding IPAdress2, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="." Foreground="White" FontSize="20" Margin="10,0,0,0"/>
                            <TextBox Width="70"
                                    FontSize="20"
                                    Margin="10,0,0,0"
                                    VerticalContentAlignment="Center"
                                    Background="Black"
                                    Foreground="White"
                                    Text="{Binding IPAdress3, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="." Foreground="White" FontSize="20" Margin="10,0,0,0"/>
                            <TextBox Width="70"
                                    FontSize="20"
                                    Margin="10,0,0,0"
                                    VerticalContentAlignment="Center"
                                    Background="Black"
                                    Foreground="White"
                                    Text="{Binding IPAdress4, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="15,0,0,5">
                            <TextBlock Text="{x:Static res:Resources.String110}" Foreground="White" FontSize="20" VerticalAlignment="Center"/>
                            <!-- TextBox有効無効追加(2025.8.17yori) -->
                            <TextBox Width="70"
                                     FontSize="20"
                                     Margin="58,0,0,0"
                                     VerticalContentAlignment="Center"
                                     Background="Black"
                                     Foreground="White"
                                     Text="{Binding SubnetMask1, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                            <TextBlock Text="." Foreground="White" FontSize="20" Margin="10,0,0,0"/>
                            <TextBox Width="70"
                                    FontSize="20"
                                    Margin="10,0,0,0"
                                    VerticalContentAlignment="Center"
                                    Background="Black"
                                    Foreground="White"
                                    Text="{Binding SubnetMask2, UpdateSourceTrigger=PropertyChanged}"
                                    IsEnabled="{Binding IsTextBoxEnabled}"/>
                            <TextBlock Text="." Foreground="White" FontSize="20" Margin="10,0,0,0"/>
                            <TextBox Width="70"
                                    FontSize="20"
                                    Margin="10,0,0,0"
                                    VerticalContentAlignment="Center"
                                    Background="Black"
                                    Foreground="White"
                                    Text="{Binding SubnetMask3, UpdateSourceTrigger=PropertyChanged}"
                                    IsEnabled="{Binding IsTextBoxEnabled}"/>
                            <TextBlock Text="." Foreground="White" FontSize="20" Margin="10,0,0,0"/>
                            <TextBox Width="70"
                                    FontSize="20"
                                    Margin="10,0,0,0"
                                    VerticalContentAlignment="Center"
                                    Background="Black"
                                    Foreground="White"
                                    Text="{Binding SubnetMask4, UpdateSourceTrigger=PropertyChanged}"
                                    IsEnabled="{Binding IsTextBoxEnabled}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="15,0,0,5">
                            <TextBlock Text="{x:Static res:Resources.String111}" Foreground="White" FontSize="20" VerticalAlignment="Center"/>
                            <!-- TextBox有効無効追加(2025.8.17yori) -->
                            <TextBox Width="70"
                                     FontSize="20"
                                     Margin="93,0,0,0"
                                     VerticalContentAlignment="Center"
                                     Background="Black"
                                     Foreground="White"
                                     Text="{Binding PortNumber, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsTextBoxEnabled}"/>
                        </StackPanel>

                        <!-- ボタン -->
                        <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                            <Button Content="{x:Static res:Resources.String60}"
                                Click="Click_InitialSettingBtn" Width="150" Height="46"
                                Margin="0,0,0,0" Style="{StaticResource PanelInitialValueButtonStyle}" FontSize="20" />
                            <Button Content="{x:Static res:Resources.String57}"
                                Click="Click_DoneBtn" Width="140" Height="46"
                                Margin="270,0,0,0" Style="{StaticResource PanelDoneButtonStyle}" FontSize="20" />
                            <Button Content="{x:Static res:Resources.String56}"
                                Click="Click_CancelBtn" Width="140" Height="46"
                                Margin="20,0,0,0" Style="{StaticResource PanelCancelButtonStyle}" FontSize="20" />
                        </StackPanel>

                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</local:PanelBase>
