<Window x:Class="VecApp.DlgMsg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VecApp"
        mc:Ignorable="d"
        Title="DlgMsg" Height="300" Width="400">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid>
            <Image Source="Image/StandardProbe.png" Width="350" Height="150" />
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="4,0" Width="200" Height="25" Content="閉じる" Click="Click_CloseBtn" Background="DarkGray" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
