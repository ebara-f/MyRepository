<Window x:Class="VecApp.DlgPass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Closing="Terminate"
        Loaded="Window_Loaded"
        BorderThickness="1" BorderBrush="LightGray"
        Title="パスワード入力" Height="200" Width="300"
        ResizeMode="NoResize">

    <Grid Background="Black">
        <TextBlock Grid.Column="0" Margin="20,20,60,0" Text="パスワードを入力してください。" VerticalAlignment="Top" Foreground="White" FontSize="12"/>
        <TextBox Text="{Binding Pass}" VerticalAlignment="Top" Background="LightGray"  Foreground="Black" Margin="20,60,20,0" Height="20"/>
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="46,6,0,-24"/>
        <Button Width="100" Height="30" Margin="20,90,130,15" Content="OK"         Style="{StaticResource PanelDoneButtonStyle}" FontSize="12" Click="Button_Click_OK"/>
        <Button Width="100" Height="30" Margin="130,90,20,15" Content="キャンセル" Style="{StaticResource PanelCancelButtonStyle}" FontSize="12" Click="Button_Click_Cancel"/>
    </Grid>

</Window>
